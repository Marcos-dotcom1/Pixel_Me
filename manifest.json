{
  "manifest_version": 3,
  "name": "Pixel Buddy Extension",
  "version": "1.0",
  "description": "A cute pixel buddy that walks around your screen",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": ["activeTab"]
}
